# Example environment file - rename to .env and fill in your API keys
# ===== Exchange API Credentials =====

# Binance API credentials
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Kraken API credentials
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_api_secret_here

# Coinbase API credentials
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here
COINBASE_PASSPHRASE=your_coinbase_passphrase_here
COINBASE_ENABLED=false

# ===== Application Configuration =====

# Simulation mode (true for simulated data, false for real exchange data)
SIMULATION_MODE=true

# Minimum profit threshold as a decimal (0.5 = 0.5%)
MIN_PROFIT_THRESHOLD=0.5

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# ===== Exchange Fees (can be overridden) =====
# BINANCE_TAKER_FEE=0.001
# BINANCE_MAKER_FEE=0.0008
# KRAKEN_TAKER_FEE=0.0026
# KRAKEN_MAKER_FEE=0.0016
# COINBASE_TAKER_FEE=0.0025
# COINBASE_MAKER_FEE=0.0015

# ===== Advanced Configuration =====
# Uncomment and modify these settings only if needed

# WebSocket connection timeout in seconds
# WS_TIMEOUT=5

# Maximum number of historical opportunities to store
# MAX_OPPORTUNITIES=100

# Server port (default is 8080)
# SERVER_PORT=8080